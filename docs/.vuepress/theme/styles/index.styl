@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'


html, body
  padding 0
  margin 0
  background-color $dark
  scroll-behavior smooth

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor

.page
  padding-left $sidebarWidth

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-color $darkest
  box-sizing border-box
  border-bottom 1px solid $borderColor
  box-shadow: 0 3px 10px 0 rgba(33 33 33, 50%)
  .links 
    background-color $darkest !important
    flex-direction: row-reverse
    .search-box:before
      display: none
    .search-box
      font-size: 1rem
      border-radius: 3px
      margin: 0 0 0 1rem
      input
        font: inherit
        font-size: 0.9rem
        font-weight: 500
        margin: 0
        text-align: left
        border-radius: 3px
        background-color: $bgColor !important
        color: $textColor !important
        vertical-align: top;
        height: 89%;
        background-size: 0.9rem
        background-position-y: 50%
        &.focused
          border-color: $accentColor !important
          border-style: solid
        
        @media (max-width: $MQNarrow)
          background-position-x: 48%
          &.focused
            background-position-x: 10px !important


      .suggestions
        top: 2.25rem
        width: fit-content;
        left: -10
        background-color: $darker

      .suggestion
        background-color: transparent
        &:hover
          background-color: $darkest

      @media (min-width: $MQNarrow)
        &:before
          top: 50%
          left: 0
          height: $navbarHeight
          content: ""
          position: absolute
          transform: translateY(-50%)
          border-left: 1px solid $light
          width: 40px !important

    #search-form
      line-height: inherit

.nav-dropdown
  background-color: $darker !important
  border-color: $borderColor !important

.page-nav .inner
  display: grid
  grid-column-gap: 1.5rem
  grid-template-areas: "previous next"
  grid-template-columns: 1fr 1fr

  span.prev, span.next
    display: flex
    align-items: center
    border: 1px solid $light
    grid-area: previous
    box-shadow: 0 3px 8px 0 rgba(116, 129, 141, 0.1)
    border-radius: 3px
    background-color: $darker
    padding-left: 1rem

    a
      flex: 1
      color: $textColor
      text-align: right
      padding: 1rem 1rem 1rem 0

      &:hover
        color: $accentColor !important

  span.next
    grid-area: next
    padding-right: 1rem
    a
      text-align: left

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  font-size 16px
  background-color $darker
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto
  padding-left: 1.5rem

.sidebar-group
  color: $sidebarHeaderColor
  margin-bottom: 1.5rem

  .sidebar-heading, .sidebar-heading
    font-size: 0.75rem
    text-transform: uppercase
    color: $sidebarHeaderColor
    letter-spacing: 1.2px
    padding: 0.5rem 1.5rem 0.5rem 1rem

  li a.sidebar-link
    padding-left: 1.2rem

.sidebar-links
  a.sidebar-link
    font-size: 0.9rem
    font-weight: 500
    line-height: 1.5
    padding: 0.5rem 1.5rem 0.5rem 1rem
    border: 1px solid transparent
    color: $textColor
    background-color $darker

    &:hover
      color: white !important

    &.active
      border-color: $light
      border-right: none
      color: $accentColor !important
      background-color: $darkest

  

  .sidebar-links .sidebar-sub-headers a
    background-color: transparent !important
    border-color: transparent

    &:hover
      color: lightgray




.badge
  font-family: monospace

{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  color $accentColor
  text-decoration none

p 
  font-size: 1.2rem
  font-weight: 500
  a
    font-weight 400
    color $accentColor
  code
    background-color: $superDark !important

.custom-block
  background-color: $darker !important

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  color #999;
  border-left .2rem solid #dfe2e5
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:focus .header-anchor,
  &:hover .header-anchor
    opacity: 1

h1
  font-size: 4rem
  text-align: center
  color: #EF8354
  font-weight: 300
  letter-spacing: 1px
  text-decoration: underline #3a3f54 2px;
  text-underline-offset: 8px;
  text-underline-position: from-font;

h2
  font-size 1.65rem
  padding-bottom .3rem
  border-bottom 1px solid $borderColor

h3
  font-size 1.35rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:focus,
  &:hover
    text-decoration none

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none

    .page
      padding-left 0

@require 'mobile.styl'

  
::selection 
	background-color: #4F5D75;

a.header-anchor
  position: absolute !important

.site-name
  top: -0.3rem