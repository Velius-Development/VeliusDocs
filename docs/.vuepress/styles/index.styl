// NAVBAR

body .navbar .site-name, h1, h2
  color: $titleColor

// SEARCH BOX

.navbar
  box-shadow: 0 3px 10px 0 rgba(33 33 33, 50%)
  .links
    flex-direction: row-reverse

    .search-box
      font-size: 1rem
      border-radius: 3px
      margin: 0 0 0 1rem

      input
        font: inherit
        font-size: 0.9rem
        padding-bottom: 3px
        border: none
        margin: 0
        text-align: left
        border-radius: 3px
        padding-left: 2rem
        background-color: $bgColor !important
        color: lightgray !important

        &.focused
          border-width: 1px
          border-color: $accentColor !important
          border-style: solid

      .suggestions
        border-radius: 0
        border-color: $lightDelimiterColor
        top: 2.25rem
        width: fit-content;
        left: -10
        background-color: $sidebarBgColor

      .suggestion
        background-color: transparent

        &:hover
          background-color: $darkerDark


      @media (min-width: $MQNarrow)
        &:before
          top: 50%
          left: 0
          height: $navbarHeight
          content: ""
          position: absolute
          transform: translateY(-50%)
          border-left: 1px solid $lightDelimiterColor

        input
          height: 100%
          background-size: 0.9rem
          background-position-y: 50%

    #search-form
      line-height: inherit

// SIDEBAR

.sidebar
  background-color: $sidebarBgColor
  padding-left: 1.5rem

.sidebar-group
  color: $sidebarHeaderColor
  margin-bottom: 1.5rem

  .sidebar-heading, .sidebar-heading
    font-size: 0.75rem
    text-transform: uppercase
    color: $sidebarHeaderColor
    letter-spacing: 1.2px
    padding: 0.5rem 1.5rem 0.5rem 1rem

  li a.sidebar-link
    padding-left: 1.2rem

.sidebar-links
  a.sidebar-link
    font-size: 0.9rem
    font-weight: 500
    line-height: 1.5
    padding: 0.5rem 1.5rem 0.5rem 1rem
    border: 1px solid transparent
    color: $textColor

    &:hover
      color: $textColor
      background-color: $darkerDark !important

    &.active
      border-color: $lightDelimiterColor
      border-right: none
      color: $accentColor !important

  

  .sidebar-links .sidebar-sub-headers a
    background-color: transparent !important
    border-color: transparent

    &:hover
      color: lightgray

// H1

