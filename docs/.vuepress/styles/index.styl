// PAGE NAV

.page-nav .inner
  display: grid
  grid-column-gap: 1.5rem
  grid-template-areas: "previous next"
  grid-template-columns: 1fr 1fr

  span.prev, span.next
    display: flex
    align-items: center
    border: 1px solid $lightDelimiterColor
    grid-area: previous
    box-shadow: 0 3px 8px 0 rgba(116, 129, 141, 0.1)
    border-radius: 3px
    background-color: $darkerDark
    padding-left: 1rem

    a
      flex: 1
      color: $textColor
      text-align: right
      padding: 1rem 1rem 1rem 0

      &:hover
        color: $accentColor !important

  span.next
    grid-area: next
    padding-right: 1rem
    a
      text-align: left


